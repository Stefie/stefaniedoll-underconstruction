ul
	align-items center
	text-transform uppercase
	display flex
	list-style none
	justify-content center
	> li
		padding $layoutSpaceHalf 0
		position relative
		+ li
			margin-left $layoutSpaceHalf

	&.contact
		margin $layoutSpace 0 $layoutSpaceHalf
		@media screen and (min-width: 600px)
			margin $layoutSpace 0
		li a
			flex-flow row wrap
			justify-content center
			align-items center
			display flex
			margin 0 5px
			span
				display: inline-block
				width 100%
				text-align center
				font-size 14px
			[class^="icon-"], [class*=" icon-"]
				font-size 40px
				line-height 50px

	&.construction
		margin $layoutSpaceAndHalf ($layoutSpace * -1) $layoutSpace
		flex-wrap wrap
		@media screen and (min-width: 600px)
			margin-bottom $layoutSpaceDouble
			margin-top $layoutSpaceDouble
		.brick
			height 25px
			line-height 25px
			position relative
		.icon
			font-size 38px
			padding-left $brickBorderWidth
		li
			display flex
			flex-wrap nowrap
			align-items flex-end
			&:first-child
			&:last-child
				.icon
					padding-left 0
			&:first-child
				.icon
					transform: rotateY(180deg)
				.brick:before
					display none
			&:last-child
				margin-left 30px
				.brick:after
					display none
		.icon-stickman-4
			position absolute
			top -12px
			left: -21px
